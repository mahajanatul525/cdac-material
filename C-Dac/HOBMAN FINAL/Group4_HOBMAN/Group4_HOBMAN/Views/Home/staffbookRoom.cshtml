@model IEnumerable<Hobman.booking_details>
@{
    ViewBag.Title = "staffbookRoom";
}

<div class="col-lg-12">
                <h1 class="head headstyle">
                    Welcome to Imperial Hotels..
                </h1>
            </div>
            <div class="col-md-2">
                <div class="panel panel-default">
                    <div class="panel-heading panalhead">
                        <h4>Book a Room..</h4>
                    </div>
                    <div class="panel-body">
                          @{Html.RenderPartial("findHotel");}
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="panel panel-default">
                    <div class="panel-heading panalhead">
                        <h4><i class="fa fa-fw fa-gift"></i> Customer Login</h4>
                    </div>
                    <div class="panel-body">


@using (Html.BeginForm())
{
    <div>
    @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
    
           @foreach(var l in Model)
           {
            
               <div class="form-group">  
                <div class="row">       
                    <div class="editor-label col-xs-4">
                      @Html.LabelFor(modelItem=>l.hotel_id,"Hotel ID")
                    </div> 
                    <div class="editor-field col-xs-4">
                     @Html.TextBoxFor(modelItem=>l.hotel_id,new{@class="form-control"})
                     @Html.ValidationMessageFor(modelItem=>l.hotel_id)
                    </div>
                </div>
           </div>
               
               <div class="form-group">  
                <div class="row">       
                    <div class="editor-label col-xs-4">
                      @Html.LabelFor(modelitem=>l.customer_id,"Customer ID")
                    </div> 
                    <div class="editor-field col-xs-4">
                     @Html.TextBoxFor(modelitem=>l.customer_id,new{@class="form-control"})
                     @Html.ValidationMessageFor(modelitem=>l.customer_id)
                    </div>
                </div>
           </div>
               
               
                   <div class="form-group">  
                <div class="row">       
                    <div class="editor-label col-xs-4">
                      @Html.LabelFor(modelItem=>l.check_in_date,"Check-in-date")
                    </div> 
                    <div class="editor-field col-xs-4">
                        @{
                            Html.RenderPartial("_Leftcalander");   
                          }

                     @Html.TextBoxFor(modelItem=>l.check_in_date,new{@class="form-control"})
                     @Html.ValidationMessageFor(modelItem=>l.check_in_date)
                    </div>
                </div>
           </div>            
               
           <div class="form-group">  
                <div class="row">       
                    <div class="editor-label col-xs-4">
                      @Html.LabelFor(modelItem=>l.check_out_date,"Check-out-date")
                    </div> 
                    <div class="editor-field col-xs-4">                   
                     @Html.TextBoxFor(modelItem=>l.check_out_date,new{@class="form-control"})
                     @Html.ValidationMessageFor(modelItem=>l.check_out_date)
                    </div>
                </div>
           </div>
               
               
                <div class="form-group">  
                <div class="row">       
                    <div class="editor-label col-xs-4">
                      @Html.LabelFor(modelItem=>l.no_of_rooms,"No of rooms")
                    </div> 
                    <div class="editor-field col-xs-4">                   
                     @Html.TextBoxFor(modelItem=>l.no_of_rooms,new{@class="form-control"})
                     @Html.ValidationMessageFor(modelItem=>l.no_of_rooms)
                    </div>
                </div>
           </div>
                            
                }
               
                 <input type="submit" value="Book" name="submit" class="btn btn-default btn-xl button" />
            </div>
}
                        </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="panel panel-default">
                    <div class="panel-heading panalhead">
                        <h4><i class="fa fa-fw fa-compass"></i>Events</h4>
                    </div>
                    <div class="panel-body">
                        
                        
                    </div>
                </div>
            </div>

@model Hobman.booking_details

@{
    ViewBag.Title = "Index1";
}
  
               <div class="col-lg-12">
                <h1 class="head headstyle">
                    Welcome to Imperial Hotels..
                </h1>
            </div>
            <div class="col-md-2">
                <div class="panel panel-default">
                    <div class="panel-heading panalhead">
                        <h4>Book a Room..</h4>
                    </div>
                    <div class="panel-body">
                          @{Html.RenderPartial("findHotel");}
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="panel panel-default">
                    <div class="panel-heading panalhead">
                        <h4><i class="fa fa-fw fa-gift"></i> Booking</h4>
                    </div>
                    <div class="panel-body">
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
       @Html.ValidationSummary(true)
           	
						<h4>Booking details</h4>
    
			<div class="form-group">  
                    <div class="row">       
                    <div class="editor-label col-xs-4">
                         @Html.LabelFor(u=>u.hotel_id,"Hotel ID")
                    </div>
                     <div class="editor-field col-xs-4">
                         @Html.TextBoxFor(u=>u.hotel_id,new{@class="form-control"})
                         @Html.ValidationMessageFor(u=>u.hotel_id)
               
                    </div>
                    </div>
                </div>
    
    
    
            <div class="form-group">  
                    <div class="row">       
                    <div class="editor-label col-xs-4">
                         @Html.LabelFor(u=>u.customer_id,"Customer ID")
                    </div>
                     <div class="editor-field col-xs-4">
                         @Html.TextBoxFor(u=>u.customer_id,new{@class="form-control"})
                         @Html.ValidationMessageFor(u=>u.customer_id)
               
                    </div>
                    </div>
                </div>
    
    <div class="form-group">  
                    <div class="row">       
                    <div class="editor-label col-xs-4">
                         @Html.LabelFor(u=>u.booking_date,"Booking-date")
                    </div>
                     <div class="editor-field col-xs-4">

                         @Html.TextBoxFor(u=>u.booking_date,new{@class="form-control" })
                         @Html.ValidationMessageFor(u=>u.booking_date)
               
                    </div>
                    </div>
                </div>
    
    
            <div class="form-group">  
                    <div class="row">       
                    <div class="editor-label col-xs-4">
                         @Html.LabelFor(u=>u.check_in_date,"Check-in-date")
                    </div>
                     <div class="editor-field col-xs-4">
                         @{
                            Html.RenderPartial("_Leftcalander");   
                          }

                         @Html.TextBoxFor(u=>u.check_in_date,new{@class="form-control" })
                         @Html.ValidationMessageFor(u=>u.check_in_date)
               
                    </div>
                    </div>
                </div>
    
    
                <div class="form-group">  
                    <div class="row">       
                    <div class="editor-label col-xs-4">
                         @Html.LabelFor(u=>u.check_out_date,"Check-out-date")
                    </div>
                     <div class="editor-field col-xs-4">
                         @Html.TextBoxFor(u=>u.check_out_date,new{@class="form-control"})
                         @Html.ValidationMessageFor(u=>u.check_out_date)
               
                    </div>
                    </div>
                </div>
 
                <div class="form-group">  
                    <div class="row">       
                    <div class="editor-label col-xs-4">
                         @Html.LabelFor(u=>u.no_of_rooms,"No of Rooms")
                    </div>
                     <div class="editor-field col-xs-4">
                         @Html.TextBoxFor(u=>u.no_of_rooms,new{@class="form-control"})
                         @Html.ValidationMessageFor(u=>u.no_of_rooms)
               
                    </div>
                    </div>
                </div>
    
    
    <input type="submit" value="Book" class="btn btn-default btn-xl button" name="submit" />
}
                    
				</div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="panel panel-default">
                    <div class="panel-heading panalhead">
                        <h4><i class="fa fa-fw fa-compass"></i>Events</h4>
                    </div>
                    <div class="panel-body">
                        
                        <a href="#" class="btn btn-default"></a>
                    </div>
                </div>
            </div>

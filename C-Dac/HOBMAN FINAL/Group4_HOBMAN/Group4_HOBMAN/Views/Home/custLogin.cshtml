@model Hobman.customer_details

@{
    ViewBag.Title = "custLogin";
}

           <div class="col-lg-12">
                <h1 class="head headstyle">
                    Welcome to Imperial Hotels..
                </h1>
            </div>
            <div class="col-md-2">
                <div class="panel panel-default">
                    <div class="panel-heading panalhead">
                        <h4>Book a Room..</h4>
                    </div>
                    <div class="panel-body">
                          @{Html.RenderPartial("findHotel");}
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="panel panel-default">
                    <div class="panel-heading panalhead">
                        <h4><i class="fa fa-fw fa-gift"></i> Customer Login</h4>
                    </div>
                    <div class="panel-body">
 @using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div>
       
            <div class="form-group">  
                <div class="row">       
                    <div class="editor-label col-xs-2">
                      @Html.LabelFor(u=>u.customer_name,"Username")
                    </div> 
                    <div class="editor-field col-xs-4">
                     @Html.TextBoxFor(u =>u.customer_name,new{@class="form-control"})
                     @Html.ValidationMessageFor(u=>u.customer_name)
                    </div>
                </div>
           </div>
            <div class="form-group">   
                <div class="row">     
                    <div class="editor-label col-xs-2">
                         @Html.LabelFor(u=>u.customer_password,"Password")
                    </div>   
                    <div class="editor-field col-xs-4">
                      
                        @Html.PasswordFor(u =>u.customer_password,new{@class="form-control"})
                        @Html.ValidationMessageFor(u =>u.customer_password)
                    </div>
                </div>
           </div>
            
            
            <br>
            <div>
                <input id="Submit1" class="btn btn-default btn-xl button" type="submit" value="Log In" />
            </div>
            <div class="link"><br />
            @Html.ActionLink("New User???", "registration", "Home", new { @class = "btn btn-default btn-xl button" })
            </div>

       
    </div>
}

                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="panel panel-default">
                    <div class="panel-heading panalhead">
                        <h4><i class="fa fa-fw fa-compass"></i>Events</h4>
                    </div>
                    <div class="panel-body">
                        
                        
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <div class="panel panel-default">
                    <div class="panel-heading panalhead">
                        <h4><i class="fa fa-fw fa-gift"></i> Staff Login</h4>
                    </div>
                    <div class="panel-body">
 @using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div>

         <div class="form-group">  
                <div class="row">       
                    <div class="editor-label col-xs-2">
                      @Html.LabelFor(u =>u.staff_name,"Username")
                    </div> 
                    <div class="editor-field col-xs-4">
                     @Html.TextBoxFor(u =>u.staff_name,new{@class="form-control"})
                     @Html.ValidationMessageFor(u =>u.staff_name)
                    </div>
                </div>
           </div>

           <div class="form-group">  
                <div class="row">       
                    <div class="editor-label col-xs-2">
                      @Html.LabelFor(u =>u.staff_password,"Password")
                    </div> 
                    <div class="editor-field col-xs-4">
                     @Html.PasswordFor(u => u.staff_password, new { @class = "form-control" })
                     @Html.ValidationMessageFor(u =>u.staff_password)
                    </div>
                </div>
           </div>
           
            <div>
                <input id="Submit" type="submit" value="submit"  class="btn btn-default btn-xl button"  />
            </div>
    </div>
}

